{
  "name": "retirement-report-generator",
  "version": "1.0.0",
  "description": "Professional PDF report generator for retirement planning",
  "type": "module",
  "main": "dist/render.js",
  "scripts": {
    "build": "tsc",
    "build:pdf": "tsx src/render.ts --data sample.json --out dist/report.pdf",
    "dev": "tsx src/render.ts --data sample.json --out dist/report.pdf --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,css,html,hbs}\""
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "puppeteer": "^23.11.0",
    "vega": "^5.30.0",
    "vega-lite": "^5.21.0",
    "zod": "^3.24.1",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "pagedjs": "^0.4.3",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}