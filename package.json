{
  "name": "retirement-simulator",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22 <23",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:clean": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && next dev --turbopack",
    "dev:port": "next dev --turbopack --port 3000",
    "build": "next build --turbopack",
    "start": "next start",
    "stop": "lsof -ti:3000 | xargs kill -9 2>/dev/null || echo 'Port 3000 is already free'",
    "restart": "npm run stop && npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@openai/codex": "^0.36.0",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sparticuz/chromium": "^138.0.2",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^12.1.0",
    "handlebars": "^4.7.8",
    "lucide-react": "^0.540.0",
    "nanoid": "^3.3.11",
    "next": "15.5.0",
    "puppeteer-core": "^23.11.0",
    "react": "19.1.0",
    "react-countup": "^6.5.3",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "vega": "^5.30.0",
    "vega-lite": "^5.21.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.0.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "typescript": "^5"
  },
  "packageManager": "pnpm@latest-9"
}
