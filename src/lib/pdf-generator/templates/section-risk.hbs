<div id="risk" class="page-break">
  <h1>{{t 'pdf.risk.title'}}</h1>
  
  <div class="content">
    <p>{{t 'pdf.risk.intro'}}</p>
    
    <h2 id="risk-market">{{t 'pdf.risk.market.title'}}</h2>
    
    <table class="avoid-break" aria-label="{{t 'pdf.risk.market.aria'}}">
      <thead>
        <tr>
          <th>{{t 'pdf.risk.market.headers.factor'}}</th>
          <th>{{t 'pdf.risk.market.headers.assumption'}}</th>
          <th>{{t 'pdf.risk.market.headers.impact'}}</th>
          <th>{{t 'pdf.risk.market.headers.mitigation'}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{t 'pdf.risk.market.rows.volatility.factor'}}</td>
          <td>{{t 'pdf.risk.market.rows.volatility.assumption' stdev=(formatPercent assumptions.roiStdev 1)}}</td>
          <td>{{t 'pdf.risk.market.rows.volatility.impact'}}</td>
          <td>{{t 'pdf.risk.market.rows.volatility.mitigation'}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.risk.market.rows.sequence.factor'}}</td>
          <td>{{t 'pdf.risk.market.rows.sequence.assumption'}}</td>
          <td>{{t 'pdf.risk.market.rows.sequence.impact'}}</td>
          <td>{{t 'pdf.risk.market.rows.sequence.mitigation'}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.risk.market.rows.inflation.factor'}}</td>
          <td>{{t 'pdf.risk.market.rows.inflation.assumption' mean=(formatPercent assumptions.inflationMean 1)}}</td>
          <td>{{t 'pdf.risk.market.rows.inflation.impact'}}</td>
          <td>{{t 'pdf.risk.market.rows.inflation.mitigation'}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.risk.market.rows.currency.factor'}}</td>
          <td>{{t 'pdf.risk.market.rows.currency.assumption'}}</td>
          <td>{{t 'pdf.risk.market.rows.currency.impact'}}</td>
          <td>{{t 'pdf.risk.market.rows.currency.mitigation'}}</td>
        </tr>
      </tbody>
    </table>
    
    <h2 id="risk-longevity">{{t 'pdf.risk.longevity.title'}}</h2>
    
    <div class="callout callout-info">
      <div class="callout-title">{{t 'pdf.risk.longevity.calloutTitle'}}</div>
      <ul>
        <li>{{t 'pdf.risk.longevity.horizon' age=person.horizonAge years=(subtract person.horizonAge person.currentAge)}}</li>
        <li>{{t 'pdf.risk.longevity.retirementYears' years=(subtract person.horizonAge person.retireAge)}}</li>
        <li>{{t 'pdf.risk.longevity.shortfallRisk' probability=(formatPercent (subtract 100 projections.successRatePct))}}</li>
      </ul>
    </div>
    
    <h2 id="risk-scenarios">{{t 'pdf.risk.scenarios.title'}}</h2>
    
    <h3 id="risk-stress">{{t 'pdf.risk.scenarios.stressTitle'}}</h3>
    
    <table class="avoid-break" aria-label="{{t 'pdf.risk.scenarios.aria'}}">
      <thead>
        <tr>
          <th>{{t 'pdf.risk.scenarios.headers.scenario'}}</th>
          <th>{{t 'pdf.risk.scenarios.headers.portfolio'}}</th>
          <th>{{t 'pdf.risk.scenarios.headers.success'}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{t 'pdf.risk.scenarios.rows.base.name'}}</td>
          <td>{{t 'pdf.risk.scenarios.rows.base.portfolio'}}</td>
          <td>{{formatPercent projections.successRatePct}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.risk.scenarios.rows.highInflation.name'}}</td>
          <td>{{t 'pdf.risk.scenarios.rows.highInflation.portfolio'}}</td>
          <td>{{t 'pdf.risk.scenarios.rows.highInflation.success' value=(formatPercent (subtract projections.successRatePct 10))}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.risk.scenarios.rows.lowReturns.name'}}</td>
          <td>{{t 'pdf.risk.scenarios.rows.lowReturns.portfolio'}}</td>
          <td>{{t 'pdf.risk.scenarios.rows.lowReturns.success' value=(formatPercent (subtract projections.successRatePct 15))}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.risk.scenarios.rows.longevity.name'}}</td>
          <td>{{t 'pdf.risk.scenarios.rows.longevity.portfolio'}}</td>
          <td>{{t 'pdf.risk.scenarios.rows.longevity.success' value=(formatPercent (subtract projections.successRatePct 8))}}</td>
        </tr>
      </tbody>
    </table>
    
    <h2 id="risk-mitigation">{{t 'pdf.risk.mitigation.title'}}</h2>
    
    <div class="kpi-grid">
      {{> kpi-tile 
        value=(t 'pdf.risk.mitigation.tiles.diversify.value')
        label=(t 'pdf.risk.mitigation.tiles.diversify.label')
        note=(t 'pdf.risk.mitigation.tiles.diversify.note')
      }}
      
      {{> kpi-tile 
        value=(t 'pdf.risk.mitigation.tiles.flexible.value')
        label=(t 'pdf.risk.mitigation.tiles.flexible.label')
        note=(t 'pdf.risk.mitigation.tiles.flexible.note')
      }}
      
      {{> kpi-tile 
        value=(t 'pdf.risk.mitigation.tiles.buffer.value')
        label=(t 'pdf.risk.mitigation.tiles.buffer.label')
        note=(t 'pdf.risk.mitigation.tiles.buffer.note')
      }}
      
      {{> kpi-tile 
        value=(t 'pdf.risk.mitigation.tiles.review.value')
        label=(t 'pdf.risk.mitigation.tiles.review.label')
        note=(t 'pdf.risk.mitigation.tiles.review.note')
      }}
    </div>
    
    <h2 id="risk-indicators">{{t 'pdf.risk.indicators.title'}}</h2>
    
    <div class="callout callout-warning">
      <div class="callout-title">{{t 'pdf.risk.indicators.calloutTitle'}}</div>
      <ul>
        <li>{{t 'pdf.risk.indicators.items.trackingError'}}</li>
        <li>{{t 'pdf.risk.indicators.items.spendingRate'}}</li>
        <li>{{t 'pdf.risk.indicators.items.inflation' threshold=(formatPercent (multiply assumptions.inflationMean 1.5))}}</li>
        <li>{{t 'pdf.risk.indicators.items.performance'}}</li>
      </ul>
    </div>
  </div>
</div>
