<div id="recommendations" class="page-break">
  <h1>{{t 'pdf.recommendations.title'}}</h1>
  
  <div class="content">
    <p>{{t 'pdf.recommendations.intro'}}</p>
    
    {{#each recommendations}}
    <div class="recommendation-card avoid-break">
      <h2 class="no-number">{{this.titleText}}</h2>
      
      <div style="display: flex; gap: var(--s-3); margin-bottom: var(--s-2);">
        <span style="background: var(--line); padding: 2pt 8pt; border-radius: 3pt; font-size: var(--small); font-weight: 600;">
          {{this.categoryText}}
        </span>
        <span class="kpi-badge badge-{{#if (eq this.impact 'High')}}danger{{else if (eq this.impact 'Medium')}}warning{{else}}good{{/if}}">
          {{t 'pdf.recommendations.impactLabel' impact=this.impactText}}
        </span>
      </div>
      
      <p>{{this.bodyText}}</p>
    </div>
    {{/each}}
    
    <h2 id="recos-priority">{{t 'pdf.recommendations.priority.title'}}</h2>
    
    <table class="avoid-break">
      <thead>
        <tr>
          <th>{{t 'pdf.recommendations.priority.headers.rank'}}</th>
          <th>{{t 'pdf.recommendations.priority.headers.recommendation'}}</th>
          <th>{{t 'pdf.recommendations.priority.headers.timeline'}}</th>
          <th>{{t 'pdf.recommendations.priority.headers.benefit'}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each recommendations}}
        <tr>
          <td>{{this.priorityRank}}</td>
          <td>{{this.titleText}}</td>
          <td>{{this.timelineText}}</td>
          <td>{{this.benefitText}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    
    <h2 id="recos-next-steps">{{t 'pdf.recommendations.nextSteps.title'}}</h2>
    
    <div class="callout callout-info">
      <div class="callout-title">{{t 'pdf.recommendations.nextSteps.calloutTitle'}}</div>
      <ol>
        <li><strong>{{t 'pdf.recommendations.nextSteps.items.review.title'}}:</strong> {{t 'pdf.recommendations.nextSteps.items.review.detail'}}</li>
        <li><strong>{{t 'pdf.recommendations.nextSteps.items.prioritize.title'}}:</strong> {{t 'pdf.recommendations.nextSteps.items.prioritize.detail'}}</li>
        <li><strong>{{t 'pdf.recommendations.nextSteps.items.consult.title'}}:</strong> {{t 'pdf.recommendations.nextSteps.items.consult.detail'}}</li>
        <li><strong>{{t 'pdf.recommendations.nextSteps.items.monitor.title'}}:</strong> {{t 'pdf.recommendations.nextSteps.items.monitor.detail'}}</li>
        <li><strong>{{t 'pdf.recommendations.nextSteps.items.adjust.title'}}:</strong> {{t 'pdf.recommendations.nextSteps.items.adjust.detail'}}</li>
      </ol>
    </div>
    
    <h2 id="recos-services">{{t 'pdf.recommendations.services.title'}}</h2>
    
    <p>{{t 'pdf.recommendations.services.intro'}}</p>
    
    <ul>
      <li><strong>{{t 'pdf.recommendations.services.items.financialPlanner.title'}}:</strong> {{t 'pdf.recommendations.services.items.financialPlanner.detail'}}</li>
      <li><strong>{{t 'pdf.recommendations.services.items.taxAdvisor.title'}}:</strong> {{t 'pdf.recommendations.services.items.taxAdvisor.detail'}}</li>
      <li><strong>{{t 'pdf.recommendations.services.items.estateAttorney.title'}}:</strong> {{t 'pdf.recommendations.services.items.estateAttorney.detail'}}</li>
      <li><strong>{{t 'pdf.recommendations.services.items.insuranceSpecialist.title'}}:</strong> {{t 'pdf.recommendations.services.items.insuranceSpecialist.detail'}}</li>
    </ul>
  </div>
</div>
