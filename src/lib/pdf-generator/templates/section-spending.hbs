<div id='spending' class='page-break'>
  <h1>{{t 'pdf.spending.title'}}</h1>

  <div class='content'>
    <p>{{t 'pdf.spending.intro'}}</p>

    <h2 id='spending-breakdown'>{{t 'pdf.spending.breakdown.title'}}</h2>

    <figure
      class='avoid-break'
      data-fig='spending-breakdown'
      aria-label='{{t "pdf.spending.breakdown.chartAria"}}'
    >
      {{{spendingChart}}}
      <figcaption>{{t 'pdf.spending.breakdown.caption' figure=(figureNumber 2)}}</figcaption>
    </figure>

    <h2 id='spending-details'>{{t 'pdf.spending.details.title'}}</h2>

    <h3 id='spending-monthly'>{{t 'pdf.spending.monthly.title'}}</h3>

    <table class='avoid-break'>
      <thead>
        <tr>
          <th>{{t 'pdf.spending.monthly.headers.category'}}</th>
          <th>{{t 'pdf.spending.monthly.headers.monthly'}}</th>
          <th>{{t 'pdf.spending.monthly.headers.annual'}}</th>
          <th>{{t 'pdf.spending.monthly.headers.total25'}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{t 'pdf.spending.monthly.rows.health'}}</td>
          <td>{{formatEUR spending.monthly.health}}</td>
          <td>{{formatEUR (multiply spending.monthly.health 12)}}</td>
          <td>{{formatEUR (multiply (multiply spending.monthly.health 12) 25)}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.spending.monthly.rows.food'}}</td>
          <td>{{formatEUR spending.monthly.food}}</td>
          <td>{{formatEUR (multiply spending.monthly.food 12)}}</td>
          <td>{{formatEUR (multiply (multiply spending.monthly.food 12) 25)}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.spending.monthly.rows.entertainment'}}</td>
          <td>{{formatEUR spending.monthly.entertainment}}</td>
          <td>{{formatEUR (multiply spending.monthly.entertainment 12)}}</td>
          <td>{{formatEUR (multiply (multiply spending.monthly.entertainment 12) 25)}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.spending.monthly.rows.shopping'}}</td>
          <td>{{formatEUR spending.monthly.shopping}}</td>
          <td>{{formatEUR (multiply spending.monthly.shopping 12)}}</td>
          <td>{{formatEUR (multiply (multiply spending.monthly.shopping 12) 25)}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.spending.monthly.rows.utilities'}}</td>
          <td>{{formatEUR spending.monthly.utilities}}</td>
          <td>{{formatEUR (multiply spending.monthly.utilities 12)}}</td>
          <td>{{formatEUR (multiply (multiply spending.monthly.utilities 12) 25)}}</td>
        </tr>
      </tbody>
    </table>

    <h3 id='spending-annual'>{{t 'pdf.spending.annual.title'}}</h3>

    <table class='avoid-break'>
      <thead>
        <tr>
          <th>{{t 'pdf.spending.annual.headers.category'}}</th>
          <th>{{t 'pdf.spending.annual.headers.annual'}}</th>
          <th>{{t 'pdf.spending.annual.headers.total25'}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{t 'pdf.spending.annual.rows.vacations'}}</td>
          <td>{{formatEUR spending.annual.vacations}}</td>
          <td>{{formatEUR (multiply spending.annual.vacations 25)}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.spending.annual.rows.repairs'}}</td>
          <td>{{formatEUR spending.annual.homeRepairs}}</td>
          <td>{{formatEUR (multiply spending.annual.homeRepairs 25)}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.spending.annual.rows.car'}}</td>
          <td>{{formatEUR spending.annual.car}}</td>
          <td>{{formatEUR (multiply spending.annual.car 25)}}</td>
        </tr>
      </tbody>
    </table>

    <h2 id='spending-inflation'>{{t 'pdf.spending.inflation.title'}}</h2>

    <div class='callout callout-warning'>
      <div class='callout-title'>{{t 'pdf.spending.inflation.calloutTitle'}}</div>
      <ul>
        <li>{{t 'pdf.spending.inflation.expectedRate' rate=(formatPercent assumptions.inflationMean 1)}}</li>
        <li>{{t 'pdf.spending.inflation.today' amount=(formatEUR (getTotalAnnualSpending spending))}}</li>
        <li>{{t 'pdf.spending.inflation.tenYears' amount=(formatEUR (multiply (getTotalAnnualSpending spending) 1.28))}}</li>
        <li>{{t 'pdf.spending.inflation.twentyYears' amount=(formatEUR (multiply (getTotalAnnualSpending spending) 1.64))}}</li>
      </ul>
    </div>

    <h2 id='spending-sustainability'>{{t 'pdf.spending.sustainability.title'}}</h2>

    <p>{{t 'pdf.spending.sustainability.intro'}}</p>

    <ul>
      <li>
        <strong>{{t 'pdf.spending.sustainability.prePension.title' start=person.retireAge end=(subtract person.pensionAge 1)}}:</strong>
        {{t 'pdf.spending.sustainability.prePension.detail'}}
      </li>
      <li>
        <strong>{{t 'pdf.spending.sustainability.pension.title' start=person.pensionAge end=person.horizonAge}}:</strong>
        {{t 'pdf.spending.sustainability.pension.detail'}}
      </li>
    </ul>
  </div>
</div>
