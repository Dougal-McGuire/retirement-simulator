<div id='appendix' class='page-break'>
  <h1>{{t 'pdf.appendix.title'}}</h1>

  <div class='content'>
    <h2 id='appendix-monte-carlo'>{{t 'pdf.appendix.monteCarlo.title'}}</h2>

    <p>{{t 'pdf.appendix.monteCarlo.description'}}</p>

    <h3 id='appendix-technical'>{{t 'pdf.appendix.technical.title'}}</h3>

    <table class='avoid-break'>
      <thead>
        <tr>
          <th>{{t 'pdf.appendix.technical.headers.component'}}</th>
          <th>{{t 'pdf.appendix.technical.headers.implementation'}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{t 'pdf.appendix.technical.rows.randomGeneration.component'}}</td>
          <td>{{t 'pdf.appendix.technical.rows.randomGeneration.implementation'}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.appendix.technical.rows.simulationCount.component'}}</td>
          <td>{{t 'pdf.appendix.technical.rows.simulationCount.implementation' runs=(formatNumber assumptions.mcRuns)}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.appendix.technical.rows.timeSteps.component'}}</td>
          <td>{{t 'pdf.appendix.technical.rows.timeSteps.implementation'}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.appendix.technical.rows.distribution.component'}}</td>
          <td>{{t 'pdf.appendix.technical.rows.distribution.implementation' mean=(formatPercent assumptions.roiMean 2) stdev=(formatPercent assumptions.roiStdev 2)}}</td>
        </tr>
      </tbody>
    </table>

    <h3 id='appendix-calculation'>{{t 'pdf.appendix.calculation.title'}}</h3>

    <div class='callout callout-info'>
      <div class='callout-title'>{{t 'pdf.appendix.calculation.calloutTitle'}}</div>
      <p style='font-family: monospace; margin: var(--s-2) 0;'>
        V(t+1) = V(t) × (1 + r(t)) + C(t) - W(t) × (1 + i(t))
      </p>
      <p>{{t 'pdf.appendix.calculation.variablesIntro'}}</p>
      <ul>
        <li>{{t 'pdf.appendix.calculation.variables.vt'}}</li>
        <li>{{t 'pdf.appendix.calculation.variables.rt'}}</li>
        <li>{{t 'pdf.appendix.calculation.variables.ct'}}</li>
        <li>{{t 'pdf.appendix.calculation.variables.wt'}}</li>
        <li>{{t 'pdf.appendix.calculation.variables.it'}}</li>
      </ul>
    </div>

    <h2 id='appendix-statistics'>{{t 'pdf.appendix.statistics.title'}}</h2>

    <h3 id='appendix-percentiles'>{{t 'pdf.appendix.statistics.percentiles.title'}}</h3>

    <p>{{t 'pdf.appendix.statistics.percentiles.description'}}</p>

    <ul>
      <li><strong>{{t 'pdf.appendix.statistics.percentiles.p10.title'}}:</strong> {{t 'pdf.appendix.statistics.percentiles.p10.detail'}}</li>
      <li><strong>{{t 'pdf.appendix.statistics.percentiles.p50.title'}}:</strong> {{t 'pdf.appendix.statistics.percentiles.p50.detail'}}</li>
      <li><strong>{{t 'pdf.appendix.statistics.percentiles.p90.title'}}:</strong> {{t 'pdf.appendix.statistics.percentiles.p90.detail'}}</li>
    </ul>

    <h3 id='appendix-success'>{{t 'pdf.appendix.statistics.success.title'}}</h3>

    <p>{{t 'pdf.appendix.statistics.success.description' age=person.horizonAge}}</p>

    <h2 id='appendix-limitations'>{{t 'pdf.appendix.limitations.title'}}</h2>

    <div class='callout callout-warning'>
      <div class='callout-title'>{{t 'pdf.appendix.limitations.calloutTitle'}}</div>
      <ul>
        <li>{{t 'pdf.appendix.limitations.items.distribution'}}</li>
        <li>{{t 'pdf.appendix.limitations.items.inflationModel'}}</li>
        <li>{{t 'pdf.appendix.limitations.items.taxPolicy'}}</li>
        <li>{{t 'pdf.appendix.limitations.items.unexpected'}}</li>
        <li>{{t 'pdf.appendix.limitations.items.healthcare'}}</li>
        <li>{{t 'pdf.appendix.limitations.items.pension'}}</li>
      </ul>
    </div>

    <h2 id='appendix-glossary'>{{t 'pdf.appendix.glossary.title'}}</h2>

    <table class='avoid-break'>
      <thead>
        <tr>
          <th>{{t 'pdf.appendix.glossary.headers.term'}}</th>
          <th>{{t 'pdf.appendix.glossary.headers.definition'}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{t 'pdf.appendix.glossary.items.monteCarlo.term'}}</td>
          <td>{{t 'pdf.appendix.glossary.items.monteCarlo.definition'}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.appendix.glossary.items.successRate.term'}}</td>
          <td>{{t 'pdf.appendix.glossary.items.successRate.definition'}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.appendix.glossary.items.realReturn.term'}}</td>
          <td>{{t 'pdf.appendix.glossary.items.realReturn.definition'}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.appendix.glossary.items.sequenceRisk.term'}}</td>
          <td>{{t 'pdf.appendix.glossary.items.sequenceRisk.definition'}}</td>
        </tr>
        <tr>
          <td>{{t 'pdf.appendix.glossary.items.planningHorizon.term'}}</td>
          <td>{{t 'pdf.appendix.glossary.items.planningHorizon.definition'}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
