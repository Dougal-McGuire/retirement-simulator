<div class='cover page-break'>
  <div class='cover-content'>
    <h1 class='cover-title no-number'>{{t 'pdf.cover.title'}}</h1>
    <h2 class='cover-subtitle no-number'>{{t 'pdf.cover.subtitle'}}</h2>

    <div class='cover-meta'>
      <p><strong>{{t 'pdf.cover.meta.age'}}:</strong> {{person.currentAge}}</p>
      <p><strong>{{t 'pdf.cover.meta.generated'}}:</strong> {{formatDate metadata.generatedAt}}</p>
      <p><strong>{{t 'pdf.cover.meta.reportId'}}:</strong> {{metadata.reportId}}</p>
      <p>{{t 'pdf.cover.meta.version'}}: {{metadata.version}}</p>
    </div>

    <div class='cover-disclaimer'>
      <p class='text-muted' style='margin-top: var(--s-8); font-size: var(--small);'>
        {{t 'pdf.cover.disclaimer'}}
      </p>
    </div>
  </div>
</div>
